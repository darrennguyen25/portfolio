---
import BaseLayout from "../layouts/base-layout.astro";
import { Image } from "astro:assets";
import Link from "../components/link.astro";
const imageFiles = await Astro.glob("/src/static/images/gallery/*{jpeg,jpg,png,gif}");
---

<BaseLayout title="Home | Darren Nguyen">
    <main class="">
        <div class="max-w-xl mx-auto">
            <h1
                class="mt-8 mb-2 animate-in duration-700 text-4xl tracking-wide text-center md:text-7xl font-cal font text-zinc-800"
            >
                Darren Nguyen
            </h1>
            <p class="mb-4 text-sm font-light text-center text-zinc-800">
                Software Developer | Cinephile
            </p>
        </div>

        <div
            class="flex flex-col items-center justify-center max-w-2xl p-6 mx-auto my-8 border rounded-md h-fit border-zinc-100"
        >
            <p class="text-sm leading-loose text-center sm:leading-loose sm:text-base text-zinc-800 text-balance">
                Hello, I'm Darren. I'm attempting to be a software engineer by building projects. I'm busier than usual now so I'll try to squeeze in a movie whenever I can. Enjoy some frames of my favorite movie Yi Yi below. 
            </p>

            <div class="flex flex-wrap justify-center gap-3 my-6">
                <Link
                    class="text-[#0e76a8]"
                    href="https://www.linkedin.com/in/darren-nguyen-181531188/"
                    icon="tabler:brand-linkedin"
                    label="LinkedIn"
                />
                <Link href="https://github.com/darrennguyen25" icon="tabler:brand-github" label="Github" />
            </div>
        </div>
        <div class="max-w-6xl mx-auto columns-3xs">
            {
                imageFiles.map((img) => (
                    <Image
                        src={img.default}
                        width={800}
                        client:load
                        alt="Frames from my favorite movie Yi Yi"
                        class={`animate-in mb-3 w-full rounded-md hover:rotate-2 transition hover:shadow-lg hover:outline outline-zinc-900 duration-500 `}
                    />
                ))
            }
        </div>
    </main>
</BaseLayout>

<style>
    @font-face {
        font-family: "CalSans";
        src: url("/fonts/CalSans-SemiBold.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
</style>
